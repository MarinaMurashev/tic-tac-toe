!!! 5
%html
  %head
    %title
      TicTacToe
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default{role: "navication"}
      .container-fluid
        .navbar-header
          = link_to "Home", :root, class: "navbar-brand"
    - if flash[:notice]
      .alert.alert-success{role: "alert"}= flash[:notice]
    - if flash[:error]
      .alert.alert-danger{role: "alert"}= flash[:error]
    = yield
  = javascript_include_tag 'application'
